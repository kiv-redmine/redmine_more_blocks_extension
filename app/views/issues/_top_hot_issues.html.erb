  <table class="list issues top_hot_issues">
    <thead>
      <tr>
        <th>#</th>
        <th><%= link_to_top_issue_sort :tracker, l(:field_tracker), filter, order_by %></th>
        <th><%= link_to_top_issue_sort :priority, l(:field_priority), filter, order_by %></th>
        <th><%= link_to_top_issue_sort :subject, l(:field_subject), filter, order_by %></th>
      </tr>
    </thead>
    <tbody>
    <% for issue in issues %>
    <tr id="issue-<%= h(issue.id) %>" class="hascontextmenu <%= cycle('odd', 'even') %> <%= issue.css_classes %>">
      <td class="id">
        <%= check_box_tag("ids[]", issue.id, false, :style => 'display:none;', :id => nil) %>
        <%= link_to(issue.id, issue_path(issue)) %>
      </td>
      <td class="tracker"><%= issue.tracker %></td>
      <td class="priority"><%= issue.priority.name %></td>
      <td class="subject">
        <%= link_to(issue.subject.truncate(60), issue_path(issue)) %> (<%= issue.status %>)
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
